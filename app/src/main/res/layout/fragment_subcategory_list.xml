<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jinshu.xuzhi.fifty.FragmentSubcategoryList"
    android:background="@color/lightgray">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src = "@drawable/big11"
        android:padding="@dimen/activity_horizontal_margin"/>

    <TextView android:text="Choose Subcategory" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/subCategoryList"
        android:background="@drawable/subcategory_list_border"
        android:layout_gravity="center_vertical"/>
    </LinearLayout>
</ScrollView>
